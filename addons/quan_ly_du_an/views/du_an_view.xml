<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sequence cho mã dự án -->
        <record id="seq_du_an" model="ir.sequence">
            <field name="name">Dự án</field>
            <field name="code">ql.du_an</field>
            <field name="prefix">DA</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Form View -->
        <record id="view_du_an_form" model="ir.ui.view">
            <field name="name">ql.du_an.form</field>
            <field name="model">ql.du_an</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_start_project" string="Bắt đầu" 
                                type="object" class="oe_highlight"
                                attrs="{'invisible': [('trang_thai', 'not in', ['draft', 'planning'])]}"/>
                        <button name="action_complete_project" string="Hoàn thành" 
                                type="object" class="oe_highlight"
                                attrs="{'invisible': [('trang_thai', '!=', 'running')]}"/>
                        <button name="action_cancel_project" string="Hủy bỏ" 
                                type="object"
                                attrs="{'invisible': [('trang_thai', 'in', ['done', 'cancel'])]}"/>
                        <field name="trang_thai" widget="statusbar" 
                               statusbar_visible="draft,planning,running,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_tasks" type="object" 
                                    class="oe_stat_button" icon="fa-tasks">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Công việc</span>
                                </div>
                            </button>
                            <button name="action_view_members" type="object" 
                                    class="oe_stat_button" icon="fa-users">
                                <field name="so_thanh_vien" widget="statinfo" 
                                       string="Thành viên"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <label for="ten_du_an" class="oe_edit_only"/>
                            <h1>
                                <field name="ten_du_an" placeholder="Tên dự án..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="ma_du_an"/>
                                <field name="quan_ly_id" options="{'no_create': True}"/>
                                <field name="muc_do_uu_tien" widget="priority"/>
                            </group>
                            <group>
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                                <field name="ngay_ket_thuc_thuc_te" 
                                       attrs="{'invisible': [('trang_thai', '!=', 'done')]}"/>
                                <field name="so_ngay_thuc_hien"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="ngan_sach_du_kien"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Mô tả">
                                <field name="mo_ta" placeholder="Mô tả chi tiết về dự án..."/>
                            </page>
                            
                            <page string="Thành viên">
                                <field name="thanh_vien_ids">
                                    <tree editable="bottom">
                                        <field name="nhan_vien_id"/>
                                        <field name="vai_tro"/>
                                        <field name="ngay_tham_gia"/>
                                        <field name="phan_tram_tham_gia"/>
                                        <field name="so_cong_viec_duoc_giao"/>
                                        <field name="so_cong_viec_hoan_thanh"/>
                                        <field name="ty_le_hoan_thanh" widget="progressbar"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_du_an_tree" model="ir.ui.view">
            <field name="name">ql.du_an.tree</field>
            <field name="model">ql.du_an</field>
            <field name="arch" type="xml">
                <tree decoration-info="trang_thai == 'planning'" 
                      decoration-success="trang_thai == 'done'"
                      decoration-danger="trang_thai == 'cancel'">
                    <field name="ma_du_an"/>
                    <field name="ten_du_an"/>
                    <field name="quan_ly_id"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="so_thanh_vien"/>
                    <field name="trang_thai" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_du_an_kanban" model="ir.ui.view">
            <field name="name">ql.du_an.kanban</field>
            <field name="model">ql.du_an</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="trang_thai">
                    <field name="ma_du_an"/>
                    <field name="ten_du_an"/>
                    <field name="quan_ly_id"/>
                    <field name="so_thanh_vien"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="ten_du_an"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="ma_du_an"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="quan_ly_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-users"/> <field name="so_thanh_vien"/> thành viên
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_du_an_search" model="ir.ui.view">
            <field name="name">ql.du_an.search</field>
            <field name="model">ql.du_an</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ten_du_an"/>
                    <field name="ma_du_an"/>
                    <field name="quan_ly_id"/>
                    <separator/>
                    <filter string="Đang thực hiện" name="running" 
                            domain="[('trang_thai', '=', 'running')]"/>
                    <filter string="Hoàn thành" name="done" 
                            domain="[('trang_thai', '=', 'done')]"/>
                    <separator/>
                    <filter string="Ưu tiên cao" name="high_priority" 
                            domain="[('muc_do_uu_tien', 'in', ['2', '3'])]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Trạng thái" name="group_status" 
                                context="{'group_by': 'trang_thai'}"/>
                        <filter string="Quản lý" name="group_manager" 
                                context="{'group_by': 'quan_ly_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_du_an" model="ir.actions.act_window">
            <field name="name">Dự án</field>
            <field name="res_model">ql.du_an</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_du_an_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo dự án đầu tiên
                </p>
                <p>
                    Quản lý các dự án của công ty, theo dõi tiến độ và thành viên.
                </p>
            </field>
        </record>
    </data>
</odoo>