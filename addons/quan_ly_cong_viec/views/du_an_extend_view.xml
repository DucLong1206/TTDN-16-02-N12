<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_du_an_form_extended" model="ir.ui.view">
            <field name="name">du_an.form.extended</field>
            <field name="model">du_an</field>
            <field name="inherit_id" ref="quan_ly_du_an.view_du_an_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[last()]" position="after">
                    <group col="4" string="Thống kê">
                        <field name="tong_chi_phi" widget="monetary"/>
                        <field name="tien_do_du_an" widget="percentpie"/>
                    </group>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Danh sách Công việc">
                        <field name="cong_viec_ids">
                            <tree editable="bottom">
                                <field name="ten_cong_viec"/>
                                <field name="nhan_vien_id"/>
                                <field name="ngay_bat_dau"/>
                                <field name="han_chot"/>
                                <field name="chi_phi_du_kien" sum="Tổng"/>
                                
                                <field name="phan_tram_tien_do"/> 
                                
                                <field name="trang_thai"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>