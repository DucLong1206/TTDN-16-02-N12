<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cong_viec_calendar" model="ir.ui.view">
            <field name="name">cong_viec.calendar</field>
            <field name="model">cong_viec</field>
            <field name="arch" type="xml">
                <calendar string="Lịch làm việc" 
                          date_start="ngay_bat_dau" 
                          date_stop="han_chot" 
                          color="nhan_vien_id" 
                          mode="month"
                          quick_add="False">
                    <field name="ten_cong_viec"/>
                    <field name="nhan_vien_id"/>
                    <field name="trang_thai"/>
                </calendar>
            </field>
        </record>

        <record id="view_cong_viec_kanban" model="ir.ui.view">
            <field name="name">cong_viec.kanban</field>
            <field name="model">cong_viec</field>
            <field name="arch" type="xml">
                <kanban default_group_by="trang_thai" records_draggable="1">
                    <field name="ten_cong_viec"/>
                    <field name="muc_do_uu_tien"/>
                    <field name="phan_tram_tien_do"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_card">
                                <div class="o_kanban_record_top">
                                    <strong class="o_kanban_record_title"><field name="ten_cong_viec"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="phan_tram_tien_do" widget="progressbar"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="muc_do_uu_tien" widget="label_selection"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_cong_viec_form" model="ir.ui.view">
            <field name="name">cong_viec.form</field>
            <field name="model">cong_viec</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="trang_thai" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="ten_cong_viec"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="du_an_id"/>
                                <field name="nhan_vien_id"/>
                                <field name="muc_do_uu_tien" widget="priority"/>
                            </group>
                            <group>
                                <field name="ngay_bat_dau"/>
                                <field name="han_chot"/>
                                <field name="chi_phi_du_kien"/>
                                <field name="phan_tram_tien_do" widget="percentpie"/>
                            </group>
                        </group>
                        <field name="ghi_chu" placeholder="Chi tiết..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_cong_viec_tree" model="ir.ui.view">
            <field name="name">cong_viec.tree</field>
            <field name="model">cong_viec</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ten_cong_viec"/>
                    <field name="du_an_id"/>
                    <field name="nhan_vien_id"/>
                    <field name="han_chot"/>
                    <field name="trang_thai"/>
                    <field name="phan_tram_tien_do" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <record id="action_quan_ly_cong_viec" model="ir.actions.act_window">
            <field name="name">Công việc</field>
            <field name="res_model">cong_viec</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
        </record>
    </data>
</odoo>